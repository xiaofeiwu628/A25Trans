<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/linearlayout_total_son_layout"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/checkBox_total_son_check"
            android:layout_width="16dp"
            android:layout_height="37dp"
            android:layout_weight="1"
            android:text="" />

        <TextView
            android:id="@+id/textView_total_son_showname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="TextView" />

        <TextView
            android:id="@+id/textView_total_show_type"
            android:layout_width="159dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="TextView" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_total_son_showtime"
            android:layout_width="133dp"
            android:layout_height="59dp"
            android:layout_weight="1"
            android:text="TextView" />

        <TextView
            android:id="@+id/textView_total_show_status"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="未记录" />

    </LinearLayout>


</LinearLayout>
