<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="282dp"
                android:orientation="vertical">


                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/R_bar_chart"
                    android:layout_width="match_parent"
                    android:layout_height="273dp"></com.github.mikephil.charting.charts.BarChart>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="请设置开始时间" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="28dp"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="日期"
                            android:textColor="#7F7F7F"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/w_tv_datedisplay_start"
                            android:layout_width="160dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:gravity="center_vertical"
                            android:paddingLeft="20dp"
                            android:textSize="18sp" />

                        <Button
                            android:id="@+id/w_bt_settingdate_start"
                            android:layout_width="111dp"
                            android:layout_height="250dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5dp"
                            android:background="#00A2E8"
                            android:text="设置日期"
                            android:textColor="#fff"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="28dp"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="时间"
                            android:textColor="#7F7F7F"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/w_tv_timedisplay_start"
                            android:layout_width="160dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:gravity="center_vertical"
                            android:paddingLeft="20dp"
                            android:textSize="18sp" />

                        <Button
                            android:id="@+id/w_bt_settingtime_start"
                            android:layout_width="111dp"
                            android:layout_height="103dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5dp"
                            android:background="#00A2E8"
                            android:text="设置时间"
                            android:textColor="#fff"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="请设置结束时间" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="28dp"
                            android:layout_marginTop="20dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:text="日期"
                                android:textColor="#7F7F7F"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/w_tv_datedisplay_end"
                                android:layout_width="160dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="5dp"
                                android:gravity="center_vertical"
                                android:paddingLeft="20dp"
                                android:textSize="18sp" />

                            <Button
                                android:id="@+id/w_bt_settingdate_end"
                                android:layout_width="111dp"
                                android:layout_height="250dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="5dp"
                                android:background="#00A2E8"
                                android:text="设置日期"
                                android:textColor="#fff"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="28dp"
                            android:layout_marginTop="20dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:text="时间"
                                android:textColor="#7F7F7F"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/w_tv_timedisplay_end"
                                android:layout_width="160dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="5dp"
                                android:gravity="center_vertical"
                                android:paddingLeft="20dp"
                                android:textSize="18sp" />

                            <Button
                                android:id="@+id/w_bt_settingtime_end"
                                android:layout_width="111dp"
                                android:layout_height="103dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="5dp"
                                android:background="#00A2E8"
                                android:text="设置时间"
                                android:textColor="#fff"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <Button
                            android:id="@+id/button_w_ok"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:text="查询" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="63dp"
                            android:orientation="vertical"></LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>