<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_record_show_showname"
                android:layout_width="match_parent"
                android:layout_height="29dp"
                android:text="TextView" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_record_show_showtype"
                android:layout_width="match_parent"
                android:layout_height="31dp"
                android:text="TextView" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="预计开始时间：" />

            <TextView
                android:id="@+id/textView_record_show_showstarttime_plan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="预计结束时间：" />

            <TextView
                android:id="@+id/textView_record_show_showendtime_plan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="预计持续时间" />

            <TextView
                android:id="@+id/textView_record_show_showedurationtime_plan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />
<!--                                                           -->

            <LinearLayout
                android:id="@+id/linear_recordchangeshow_checkedy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="实际开始时间："
                android:visibility="visible"/>

            <TextView
                android:id="@+id/textView_record_show_showstarttime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:visibility="visible"/>

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="实际结束时间："
                android:visibility="visible"/>

            <TextView
                android:id="@+id/textView_record_show_showendtime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:visibility="visible"/>

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="实际持续时间"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/textView_record_show_showedurationtime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:visibility="visible"/>
            </LinearLayout>

            <TextView
                android:id="@+id/textView_record_show_showstatus"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="TextView"
                android:visibility="visible" />

            <LinearLayout
                android:id="@+id/linear_recordchangeshow_settime"
                android:layout_width="match_parent"
                android:layout_height="304dp"
                android:orientation="vertical"
                android:visibility="visible">
                <!--A-->

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="请选择实际开始时间" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="109dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="28dp"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="日期"
                            android:textColor="#7F7F7F"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_date_recordchangeshow_start"
                            android:layout_width="160dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:gravity="center_vertical"
                            android:paddingLeft="20dp"
                            android:textSize="18sp" />

                        <Button
                            android:id="@+id/bt_settingdate_recordchangeshow_start"
                            android:layout_width="111dp"
                            android:layout_height="250dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5dp"
                            android:background="#00A2E8"
                            android:text="设置日期"
                            android:textColor="#fff"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="28dp"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="时间"
                            android:textColor="#7F7F7F"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_time_recordchangeshow_start"
                            android:layout_width="160dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:gravity="center_vertical"
                            android:paddingLeft="20dp"
                            android:textSize="18sp" />

                        <Button
                            android:id="@+id/bt_settingtime_recordchangeshow_start"
                            android:layout_width="111dp"
                            android:layout_height="103dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5dp"
                            android:background="#00A2E8"
                            android:text="设置时间"
                            android:textColor="#fff"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="请选择结束时间" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="109dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="28dp"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="日期"
                            android:textColor="#7F7F7F"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_date_recordchangeshow_end"
                            android:layout_width="160dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:gravity="center_vertical"
                            android:paddingLeft="20dp"
                            android:textSize="18sp" />

                        <Button
                            android:id="@+id/bt_settingdate_recordchangeshow_end"
                            android:layout_width="111dp"
                            android:layout_height="250dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5dp"
                            android:background="#00A2E8"
                            android:text="设置日期"
                            android:textColor="#fff"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="28dp"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="时间"
                            android:textColor="#7F7F7F"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_time_recordchangeshow_end"
                            android:layout_width="160dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:gravity="center_vertical"
                            android:paddingLeft="20dp"
                            android:textSize="18sp" />

                        <Button
                            android:id="@+id/bt_settingtime_recordchangeshow_end"
                            android:layout_width="111dp"
                            android:layout_height="103dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5dp"
                            android:background="#00A2E8"
                            android:text="设置时间"
                            android:textColor="#fff"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/button_record_show_change"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="修改" />

                <!--A-->
            </LinearLayout>

            <Button
                android:id="@+id/button_recordchangeshow_delete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="删除" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>