<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ui.TotalShow.TotalShowFragment">

                <Spinner
                    android:id="@+id/spinner_total_show_typeuse"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <Button
                android:id="@+id/button_total_show_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="返回" />

            <Button
                android:id="@+id/button_total_show_unknow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="不知道干啥" />
        </LinearLayout>
                <TextView
                    android:id="@+id/textView_total_show_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview_total_showr_recycle_type"
            android:layout_width="match_parent"
            android:layout_height="330dp"
            android:orientation="vertical">


        </androidx.recyclerview.widget.RecyclerView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview_total_showr_ecycle"
            android:layout_width="match_parent"
            android:layout_height="176dp"
            android:orientation="vertical"></androidx.recyclerview.widget.RecyclerView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button_total_show_add"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="添加新记录" />



            </LinearLayout>
        </LinearLayout>
</layout>